<div class="container">
  <div class="row"><h4>Pending Requests</h4></div>
  <div class="row">
    <table class="table table-inverse">
      <thead>
      <tr>
        <th>#</th>
        <th>Id</th>
        <th>Status</th>
        <th>Approve</th>
        <th>Reject</th>
      </tr>
      </thead>
      <tbody>
      <% for(var i=0; i < requests.length; i++) { %>
      <tr>
        <%  if (requests[i].status === 'pending') { %>
        <td><%=i+1%></td>
        <td><%=requests[i].id%></td>
        <td><%=requests[i].status%></td>
        <td><a href="/update_request?requestId=<%=requests[i].id %>&action=approved" >Approve</a></td>
        <td><a href="/update_request?requestId=<%=requests[i].id %>&action=denied" >Reject</a></td>
       <% } %>
      </tr>
      <% } %>
      </tbody>
    </table>
  </div>
</div>
